@{
    ViewBag.Title = "Role dla użytkoników";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="spacerBody">
        <p>&nbsp;</p>
        @Html.ActionLink("Dodaj nową role", "RoleCreate") | @Html.ActionLink("Lista ról", "RoleIndex")

        <h2>Dodaj role dla użytkownika</h2>

        @using (Html.BeginForm("RoleAddToUser", "Admin"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="message-success">@ViewBag.ResultMessage</div>
            <p>
                Nazwa użytkownika : @Html.TextBox("UserName")
                Nazwa roli: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)

            </p>

            <input type="submit" value="Dodaj" />
        }



        <div class="hr"></div>
        @using (Html.BeginForm("GetRoles", "Admin"))
        {
            @Html.AntiForgeryToken()
            <p>
                Nazwa użytkownika : @Html.TextBox("UserName")
                <input type="submit" value="Znajdz role dla tego uzytkownika" />
            </p>
        }

        @if (ViewBag.RolesForThisUser != null)
        {
            <text>
                <h3>Rola dla użytkownika </h3>
                <ol>
                    @foreach (string s in ViewBag.RolesForThisUser)
                    {
                        <li>@s</li>
                    }
                </ol>
            </text>
        }
        
        <h3>Usun role dla użytkownika</h3>

        @using (Html.BeginForm("DeleteRoleForUser", "Admin"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <p>
                Nazwa użytkownika : @Html.TextBox("UserName")
                Rola: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)

            </p>

            <input type="submit" value="Usun role dla tego użytkownika" />
        }

    </div>