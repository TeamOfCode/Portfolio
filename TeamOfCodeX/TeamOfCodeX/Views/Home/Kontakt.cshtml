@model TeamOfCodeX.Models.ContactModel

@{
    AjaxOptions ajaxOpts = new AjaxOptions()
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "post",
        UpdateTargetId = "wiadomosc",
        Url = Url.Action("Kontakt", "Home")
    };
}

<div class="container">
    <div class="title">
        <h1>Kontakt</h1>
        <p>Jeżeli masz dla nas wyzwanie nie bój się do nas napisać!</p>
    </div>
</div>
<div class="map-wrapper">
    <div class="map-canvas" id="map-canvas">Loading map...</div>
    <div class="container">
        <div class="row-fluid">
            <div class="span5 contact-form centered">
                <h3>Napisz do nas</h3>
@using (Ajax.BeginForm(ajaxOpts))
{
    @Html.AntiForgeryToken()




    <div class="control-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="controls">
            @Html.EditorFor(model => model.FromName, new { htmlAttributes = new { @class = "name", PlaceHolder = "Nazwa..." } })
            @Html.ValidationMessageFor(model => model.FromName, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="control-group">
            <div class="controls">
                @Html.EditorFor(model => model.FromEmail, new { htmlAttributes = new { @class = "email", PlaceHolder = "Email..." } })
                @Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                @Html.EditorFor(model => model.Message, new {htmlAttributes = new {@class = "message", PlaceHolder = "Wiadomość..."}})
                @Html.ValidationMessageFor(model => model.Message, "", new {@class = "text-danger"})
            </div>
            <div id="wiadomosc"></div>
        </div>
        <div class="control-group">
            <div class="controls">
                @*<input type="submit" value="Wyślij wiadomość" class="submit-btn" />*@
                <input type="submit" value="Wyślij wiadomość" class="message-btn" />
            </div>
        </div>

}
               
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="span9 center contact-info">
        <p>Poland</p>
        <p class="info-mail">marcin.mazurowski@o2.pl</p>

        <div class="title">
            <h3>Znajdź nas w sieci</h3>
        </div>
    </div>
    <div class="row-fluid centered">
        <ul class="social">
            <li>
                <a href="https://www.facebook.com/marcin.martin.35">
                    <span class="icon-facebook-circled"></span>
                </a>
            </li>
            <li>
                <a href="https://www.linkedin.com/pub/marcin-mazurowski/88/31b/817">
                    <span class="icon-linkedin-circled"></span>
                </a>
            </li>
            <li>
                <a href="https://www.facebook.com/patryk.stulczewski">
                    <span class="icon-facebook-circled"></span>
                </a>
            </li>

        </ul>
    </div>
</div>